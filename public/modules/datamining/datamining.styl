
@import 'material.css'

html,
body {
    margin  : 0;
    padding : 0;
    height  : 100%;
    font-family: open_sanslight;
    font-weight: 400;
}

#container {
    min-height: 100%;
    position: relative;
}

#header {
    height: 5px
    padding: 5px;
    background: #BE3757;

    color: white;
    font-size: 1.3em;
    text-align: center;

    cursor: pointer;
    transition: 0.5s;

    &:hover {
        height: 80px;
        transition: 0.5s;
    }
}

#body {
    padding: 10px;
    padding-bottom: 220px;

    // text-align: center;
    .report {
      width: 600px;
      margin: auto;
      font-size: 1.4em;

      h1#data-mining-rapport {
        font-size: 4em;
        text-align: center;
        margin-bottom 100px
      }

      h1,h2 {
        margin-top: 50px;
        display: inline-block;
      }
      h3 {
        margin-top: 20px;
        display: inline-block;
      }

      .authors {
          width: 280px;
          margin: auto;

          ul {
            list-style-type: none;
          }
      }

      .toggle {
        margin-left: 80px;
        margin-bottom: 10px;
      }

      .toggled {
        opacity: 1;
        overflow: hidden;
        transition: .5s;
      }

      .toggled-visible {
        max-height: 200px;
        transition: max-height .5s;
      }
      .toggled-hidded {
        max-height: 0px;
        overflow: hidden;
        transition: max-height .5s;
      }
    }

    nav.summary {
      top: 300px;
      position: fixed;
      background: #eee;
      padding: 10px

      opacity: .5;
      overflow hidden;
      max-width: 150px;
      max-height: 44px;
      transition: .5s;

      -webkit-box-shadow: 0px 0px 0px 0px rgba(50, 50, 50, 0.75);
      -moz-box-shadow:    0px 0px 0px 0px rgba(50, 50, 50, 0.75);
      box-shadow:         0px 0px 0px 0px rgba(50, 50, 50, 0.75);;

      &:hover {
          opacity: 1;
          overflow hidden;
          max-width: 300px;
          max-height: 700px;


          -webkit-box-shadow: 2px 2px 18px 0px rgba(20, 20, 20, 0.5);
          -moz-box-shadow:    2px 2px 18px 0px rgba(20, 20, 20, 0.5);
          box-shadow:         2px 2px 18px 0px rgba(20, 20, 20, 0.5)

          transition: .5s
      }

      .summary-title {
        font-size: 1.8em;
      }

      .side-bar {
          top 0
          left 0
          position absolute

          width: 5px;
          height: 100%;
          background: #2980B9;
      }
    }
}

#footer {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 160px;
    transition: 0.5s;
    background: #eee;

    &:hover {
        height: 180px;
        transition: 0.5s;
    }
}

@font-face {
    font-family: 'open_sanslight';
    src: url('./fonts/OpenSans-Light-webfont.eot');
    src: url('./fonts/OpenSans-Light-webfont.eot?#iefix') format('embedded-opentype'),
         url('./fonts/OpenSans-Light-webfont.woff') format('woff'),
         url('./fonts/OpenSans-Light-webfont.ttf') format('truetype'),
         url('./fonts/OpenSans-Light-webfont.svg#open_sanslight') format('svg');
    font-weight: normal;
    font-style: normal;
}
