doctype html
html
  head
    title= 'sideffects // blog'
    meta(charset='utf-8')
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/modules/blog/stylesheets/blog.css')
    link(rel='stylesheet', href='/modules/blog/stylesheets/clean-blog.css')
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css', type='text/css')
