  body#blog
    //- <!-- Navigation -->
    include includes/nav.jade

    include includes/header.jade

    //- <!-- Main Content -->
    div(class="container")
      div(class="row")
        div(class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1")
          block content
          
          
          //- <!-- Pager -->
          ul(class="pager")
            li(class="next")
              a(href="#") Older Posts &rarr;
    
    
    include includes/footer.jade
    
    // script(src='js/jquery-2.1.1.min.js')
    script(src="/libs/jquery/jquery.js")
    script(src="/libs/bootstrap/bootstrap.min.js")
    script(src="/modules/blog/js/clean-blog.min.js")
    script(src="/modules/blog/js/blog.js")
    
    //- Prism code highlight
    script(src="/libs/prismjs/prism.js")
    
