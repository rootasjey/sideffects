  body#blog
    //- <!-- Navigation -->
    include includes/nav.jade

    include includes/header.jade

    //- <!-- Main Content -->
    div(class="container")
      div(class="row")
        div(class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1")
