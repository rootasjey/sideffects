extends layout

block content
  div.post
    div.post.content
      != post.content
    div.tags
      - each tag in post.tags
        a(href=tagUrl(tag))
          span.label.label-info #{tag}
  div.comments
    include includes/disqus.jade
    
  div.backtotop
    img(src='/icons/arrow_white.png')
    
